<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field w-full pb-5">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", 
    class: "w-full  shadow appearance-none border rounded" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password",placeholder: "Password", 
    class: "w-full  shadow appearance-none border rounded" %>
  </div>


  <% if devise_mapping.rememberable? %>
    <div class="field pb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <button class="actions bg-blue-500 hover:bg-blue-700 text-white
  font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
     <%= f.submit "Log in" %>
  </button>

  

<% end %>

<%= render "devise/shared/links" %>




